<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/cim"
        android:layout_width="169dp"
        android:layout_height="30dp"
        android:text="Regisztrációs lépések"
        android:textAllCaps="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.232" />

    <EditText
        android:id="@+id/nevInput"
        android:layout_width="324dp"
        android:layout_height="45dp"
        android:layout_marginTop="17dp"
        android:ems="10"
        android:hint="Név (Kalapos Tamás)"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cim"
        app:layout_constraintVertical_bias="0.024" />

    <EditText
        android:id="@+id/emailInput"
        android:layout_width="324dp"
        android:layout_height="45dp"
        android:ems="10"
        android:hint="Emial (bela32@gmail.com)"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toTopOf="@+id/jelszoInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nevInput"
        app:layout_constraintVertical_bias="0.511" />

    <EditText
        android:id="@+id/jelszoInput"
        android:layout_width="324dp"
        android:layout_height="45dp"
        android:layout_marginBottom="332dp"
        android:ems="10"
        android:hint="Jelszó"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/regisztralButton"
        android:layout_width="212dp"
        android:layout_height="65dp"
        android:text="Regisztráció"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jelszoInput"
        app:layout_constraintVertical_bias="0.05" />
</androidx.constraintlayout.widget.ConstraintLayout>